// FROM
// https://blog.logrocket.com/set-up-a-typescript-gatsby-app/
{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "jsx": "preserve",
    "lib": ["dom", "esnext"],
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "allowJs": true,
    "typeRoots": [
      "custom-typings"
    ]
  },
  "exclude": ["node_modules", "public", ".cache"]
}